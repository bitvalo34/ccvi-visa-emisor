{
  "name": "ccvi-visa-emisor",
  "version": "1.0.0",
  "description": "Scaffold inicial con CI, lint y pruebas.",
  "main": "index.js",
  "scripts": {
    "dev": "node --env-file=.env src/server.js",
    "start": "node src/server.js",

    "format": "prettier -w .",
    "format:check": "prettier -c .",

    "lint": "eslint .",

    "db:up": "docker compose up -d --build",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f --tail=100",
    "db:psql": "docker compose exec -it db psql -U app -d ccvi",
    "db:seed": "docker compose exec -T api node scripts/seed.js", 

    "test": "node --env-file=.env --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitvalo34/ccvi-visa-emisor.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/bitvalo34/ccvi-visa-emisor/issues"
  },
  "homepage": "https://github.com/bitvalo34/ccvi-visa-emisor#readme",
  "engines": {
    "node": ">=24 <25"
  },
  "packageManager": "npm@9.6.7",
  "dependencies": {
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "pino": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
